generator client {
  provider     = "prisma-client"
  output       = "../src/generated/prisma"
  moduleFormat = "cjs"
}

datasource db {
  provider = "postgresql"
}

enum UserRole {
  ADMIN
  STREAMER
  VIEWER
}

enum StreamVisibility {
  PUBLIC
  PRIVATE
  UNLISTED
}

enum StreamEventType {
  STREAM_START
  STREAM_STOP
  STREAM_CONNECT
  STREAM_DISCONNECT
  INVALID_KEY
}

enum ProviderType {
  CREDENTIALS
  GOOGLE
  DISCORD
}

model User {
  id     String   @id @default(cuid())
  avatar String?
  name   String?  @default(dbgenerated("('user_' || substring(md5(random()::text), 1, 8))"))
  email  String   @unique
  role   UserRole @default(VIEWER)

  accounts Account[]
  streams  Stream[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([role])
}

model Account {
  id                String       @id @default(cuid())
  userId            String
  provider          ProviderType
  providerAccountId String
  isVerified        Boolean      @default(false)

  password String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@index([userId])
}

model Stream {
  id     String @id @default(cuid())
  userId String
  user   User   @relation(fields: [userId], references: [id])

  title       String
  description String?
  isLive      Boolean          @default(false)
  visibility  StreamVisibility @default(PUBLIC)

  ingestKey StreamKey?
  meta      StreamMeta?

  events StreamEvent[]

  recordings Recording[]

  startedAt DateTime?
  endedAt   DateTime?

  createdAt      DateTime        @default(now())
  updatedAt      DateTime        @updatedAt
  viewerSessions ViewerSession[]

  @@index([userId])
  @@index([isLive])
  @@index([visibility])
  @@index([createdAt])
}

model StreamMeta {
  id       String @id @default(cuid())
  streamId String @unique
  stream   Stream @relation(fields: [streamId], references: [id], onDelete: Cascade)

  totalDuration  Float   @default(0)
  segmentCount   Int     @default(0)
  lastSegmentSeq Int     @default(0)

  // DASH Mathematical Metadata
  segmentDuration Int    @default(2)
  timescale       Int    @default(1000)
  videoRepId      String @default("0")
  audioRepId      String @default("1")
  basePath        String?

  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())

  @@index([streamId])
}

model StreamKey {
  id       String @id @default(cuid())
  streamId String @unique
  stream   Stream @relation(fields: [streamId], references: [id])

  keyHash   String
  isActive  Boolean   @default(true)
  expiresAt DateTime?

  lastUsedAt DateTime?
  createdAt  DateTime  @default(now())

  @@index([streamId])
  @@index([isActive])
}

model StreamEvent {
  id       String @id @default(cuid())
  streamId String
  stream   Stream @relation(fields: [streamId], references: [id])

  type    StreamEventType
  payload Json?

  createdAt DateTime @default(now())

  @@index([streamId])
  @@index([type])
  @@index([createdAt])
  @@index([streamId, createdAt])
}

model Recording {
  id       String @id @default(cuid())
  streamId String
  stream   Stream @relation(fields: [streamId], references: [id])

  fileUrl  String
  duration Int?
  size     BigInt?

  createdAt DateTime @default(now())

  @@index([streamId])
  @@index([createdAt])
}

model ViewerSession {
  id       String @id @default(cuid())
  streamId String
  stream   Stream @relation(fields: [streamId], references: [id])

  ip        String
  userAgent String?
  startedAt DateTime  @default(now())
  endedAt   DateTime?

  @@index([streamId])
  @@index([startedAt])
}
